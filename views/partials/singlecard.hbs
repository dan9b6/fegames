<div class="card col-3 m-3" style="width: 40rem;">
  <img class="card-img-top " style="max-height: 10em" src="{{photo}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">{{tagline}}</p>
    <a href="/game/{{_id}}" class="btn btn-primary d-flex align-items-end">Go to the game!</a>

{{#if sameUser}}
    <a href="/game/{{_id}}/edit" class="btn btn-primary d-flex align-items-end">Edit!</a>
    <a href="/game/{{_id}}/delete" class="btn btn-primary d-flex align-items-end">Delete</a>
{{/if}}

  </div>
</div>