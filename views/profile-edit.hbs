<form action="/profile/{{user._id}}/edit" method="POST" enctype="multipart/form-data">

  <label for="input-photo">Edit Profile Picture</label>
  <input type="file" name="photo" id="input-photo" accept="image/*"/>

  <label for="input-name">Name</label>
  <input type="text" id="input-name" name="name" placeholder="Your Name" value="{{ user.name }}" />

  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" placeholder="Your Email" value="{{ user.email }}" />

  <label for="input-campus">Campus</label>
  <select name="campus" id="input-campus">
    <option value="Amsterdam">Amsterdam</option>
    <option value="Lisbon">Lisbon</option>
    <option value="Madrid">Madrid</option>
    <option value="Miami">Miami</option>
  </select>

  <br>
  <button>Confirm Changes</button>
</form>
