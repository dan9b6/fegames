<section class="sectionprofile ">


<img class="imgprofile" src= {{userInfo.profilePicture}} alt="profile picture">


<div class="userdiv">
<span><strong>Username</strong>: {{userInfo.name}}</span>
<br />
<span><strong>Email</strong>: {{userInfo.email}}</span>
<br>
<span><strong>Campus</strong>: {{userInfo.campus}}</span>
<br>
<a href="/profile/{{userInfo._id}}/edit"><small><img src="/images/edit.png" height="20" width="20">   Edit profile</small></a>
<br>
<a href="/project/create"><small><img src="/images/create.png" height="20" width="20">   Publish your game!</small></a>
<br>
</div>


<span><strong>Your Projects</strong>: </span>
<br>
<div class="container">
    <div class="row row-cols-1 row-cols-md-3">
      {{#each projects}}
      {{!-- <div class="col"> --}}
      {{>singlecard}}
      {{!-- </div> --}}
      {{/each}}
    </div>
  </div>

</section>
