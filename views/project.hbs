<section class="secproject">

<div class="titleproject">
<h3><strong>{{projectInfo.title}}</strong> by {{projectInfo.author.name}}</h3>
<br>
</div>

<img class="imgproject" src= {{projectInfo.photo}} alt="profile picture">
<br>

<div class="projectdiv">
<span><strong>Category</strong>: {{projectInfo.category}}</span>
<br>
<span><strong>Project Title</strong>: {{projectInfo.title}}</span>
<br>
<span><strong>Description</strong>: {{projectInfo.description}}</span>
<br>
<span><strong>Tagline</strong>: {{projectInfo.tagline}}</span>
<br>
<span><strong>Netlify Link</strong>: {{projectInfo.netlify}}</span>
<br>
</div>
<p>Likes: {{likeLength}}</p>

<!--
  <a href="/project/{{projectInfo._id}}/edit">Edit Project</a>
-->

{{#if newLike}}
<form action="/project/{{projectInfo._id}}/like" method="POST">
<input type="number" value="{{projectInfo.like}}" name="like" style="display: none;"/>
  <button>Like</button>
</form>
{{else}}
<p>You have already liked this project!</p>
{{/if}}

<div class="like-container">
  <i id="like-btn" class="far fa-heart"></i>
</div>

<div>
  <h4>Comments</h4>
  {{#each comments}}
    {{>comment}}
  {{/each}}
  <h4>Add a Comment</h4>
  <form action="/project/{{projectInfo._id}}/comment" method="POST">
  <label for="input-content">Your Comment</label>
  <textarea name="content" id="input-content" placeholder="Your comment here..."></textarea>

  <button>Submit Comment</button>
  </form>
</div>

</section>
