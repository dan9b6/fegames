<div class="index-page">
  <div class="sign">
    <h1>Sign Up</h1>
    <form action="/authentication/sign-up" method="POST">
      <label for="input-name">Username</label>
      <input type="text" id="input-name" name="name" placeholder="Your Name" />
      <label for="input-campus">Campus</label>
      <select name="campus" id="input-campus">
        <option value="Amsterdam">Amsterdam</option>
        <option value="Barcelona">Barcelona</option>
        <option value="Berlin">Berlin</option>
        <option value="Lisbon">Lisbon</option>
        <option value="Madrid">Madrid</option>
        <option value="Mexico City">Mexico City</option>
        <option value="Miami">Miami</option>
        <option value="Paris">Paris</option>
        <option value="Sao Paulo">Sao Paulo</option>
      </select>
      <label for="input-email">Email</label>
      <input type="email" id="input-email" name="email" placeholder="Your Email" />
      <label for="input-password">Password</label>
      <input type="password" name="password" id="input-password" placeholder="A Strong Password" />
      <button>Sign Up</button>
    </form>
    <a href="/authentication/github">Sign Up with GitHub</a>
  </div>
</div>